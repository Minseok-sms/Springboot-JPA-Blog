let index = {
	init: function(){
		$("#btn-save").on("click", ()=>{
			this.save();
		});
	},
	
	save: function(){
		//alert('users의 함수호출됨.')
		let data = {
			username: $("#username").val(),
			password: $("#password").val(),
			email: $("#email").val()
		};
		//console.log(data);
		//default가 비동기호출.
		$.ajax({
			//회원가입수행요청
			type:"POST",
			url:"/api/user",
			data:JSON.stringify(data),
			contentType:"application/json; charset=utf-8",
			dataType:"json"
			
		}).done(function(resp){
			alert("회원가입이 완료되었습니다.");
			location.href="/blog";
		}).fail(function(){
			alert(JSON.stringify(error));
		}); //ajax통신을통해 3개의데이터를 json으로변경하여 insert요청,
	}
}
index.init;